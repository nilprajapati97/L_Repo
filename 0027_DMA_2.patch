#include<stdio.h>
#include<stdlib.h>

int main()
{
    int *p,i;
    p  =  (int  *) calloc (5);
    
    printf("Before Allocation with malloc:");
    for(i=0;i<5;i++)
        printf("%d ",p[i]);
    printf("\n");
    
    printf("After Allocation with malloc:");
    for(i=0;i<5;i++)
        scanf("%d",&p[i]);
    printf("\n");
    
    printf("Print Values:");
    for(i=0;i<5;i++)
        printf("%d ",p[i]);
    printf("\n");    
    
    return 0;
}


